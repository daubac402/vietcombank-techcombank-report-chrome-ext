{
    "name": "VietcomBank - Techcombank Report Maker",
    "version": "1.0",
    "description": "Tạo báo cáo dạng text nhanh trong khi đang xem Transaction Detail của 2 ngân hàng Vietcombank và Techcombank bằng Google Chrome Extension",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "content_scripts": [
    {
        "matches": ["https://vcbdigibank.vietcombank.com.vn/*"],
        "css": ["css/select2.min.css"],
        "js": ["js/jquery.min.js", "js/select2.full.min.js", "js/main.js"]
    }],
    "background":
    {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "page_action":
    {
        "default_popup": "popup.html",
        "default_icon":
        {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "icons":
    {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "manifest_version": 2
}